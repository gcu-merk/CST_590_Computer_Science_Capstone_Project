# Environment variables for Traffic Monitoring System
# TEMPLATE FILE - Copy this to .env and fill in your values
# 
# IMPORTANT: Never commit .env file to git!
# The .env file contains sensitive credentials and should remain local only.

# Host user mapping for Docker containers
HOST_UID=1000
HOST_GID=1000
DOCKER_USER=1000:1000

# Storage paths
STORAGE_ROOT=/mnt/storage
REDIS_DATA_PATH=/mnt/storage/redis_data
POSTGRES_DATA_PATH=/mnt/storage/postgres_data
LOGS_PATH=/mnt/storage/logs

# Container-accessible directories
CONTAINER_ACCESSIBLE_PATH=/mnt/storage/container-accessible

# Docker image configuration
DOCKER_IMAGE=gcumerk/cst590-capstone-public:latest

# Database configuration
POSTGRES_DB=traffic_monitoring
POSTGRES_USER=traffic_user
# ⚠️ CHANGE THIS IN PRODUCTION! Generate a strong password
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
# Optional: Add Redis password for production
# REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# API configuration
API_PORT=5000
API_HOST=0.0.0.0

# Security (REQUIRED for production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_SECRET
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_JWT_SECRET

# Deployment settings
COMPOSE_PROJECT_NAME=traffic_monitoring
DEPLOY_USER=merk

# Optional: External API keys (if needed)
# WEATHER_API_KEY=your_api_key_here
# AIRPORT_API_KEY=your_api_key_here